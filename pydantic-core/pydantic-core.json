{
  "name": "pydantic-core",
  "buildsystem": "simple",
  "build-options": {
    "env": {
      "CARGO_HOME": "/run/build/pydantic-core/cargo",
      "RUSTFLAGS": "-L /app/lib/"
    }
  },
  "build-commands": [
    "cargo --offline fetch --manifest-path Cargo.toml --verbose",
    "maturin build --release",
    "pip3 install --verbose --exists-action=i --no-index --find-links=file://${PWD}/target/wheels --prefix=${FLATPAK_DEST} \"pydantic-core\" --no-build-isolation"
  ],
  "sources": [
    "generated-sources.json",
    {
      "type": "archive",
      "url": "https://github.com/pydantic/pydantic-core/archive/v2.4.0.tar.gz",
      "sha256": "94b4ef19df7e0ea5e9f32590afc3673dab0d9855ed786d3dc95513124d842874"
    }
  ]
}
